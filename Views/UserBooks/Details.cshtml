@model Bookshelf.Models.UserBook

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<br />
<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Authors
        </dt>
        <dd>
            @{int count = 0;}
            @foreach (var i in Model.Book.AuthorsBooks)
            {
                count++;
                @if (Model.Book.AuthorsBooks.Count == count)
                {
                    <span>@Html.DisplayFor(modelItem => i.Author.FullName)</span>
                }
                else
                {
                    <span>@Html.DisplayFor(modelItem => i.Author.FullName), </span>
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { ApplicationUserID = Model.ApplicationUserID, BookID = Model.BookID }, new { @class = "btn btn-outline-primary" })
    <a asp-action="Index">Back to List</a>
</div>
