@model Bookshelf.Models.UserBook

@{
    ViewData["Title"] = "My Book Details";
}

<h1>Details</h1>
<br />
<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @{int count = 0;}
            @foreach (var i in Model.Book.AuthorsBooks)
            {
                count++;
                @if (Model.Book.AuthorsBooks.Count == count)
                {
                    <span>@Html.DisplayFor(modelItem => i.Author.FullName)</span>
                }
                else
                {
                    <span>@Html.DisplayFor(modelItem => i.Author.FullName), </span>
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-secondary" asp-action="Index"><i class="fas fa-angle-left"></i> Back to My Books list</a>
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-bookId="@Model.BookID" asp-route-userId="@Model.ApplicationUserID">Edit  <i class="far fa-edit"></i></a>
    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-bookId="@Model.BookID" asp-route-userId="@Model.ApplicationUserID">Delete <i class="far fa-trash-alt"></i></a>
</div>
