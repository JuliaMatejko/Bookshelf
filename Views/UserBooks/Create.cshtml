@model Bookshelf.Models.UserBook

@{
    ViewData["Title"] = "Create";
}

<h1>Add Book</h1>
<br />
<h4>Selected book title</h4><!--TO DO-->
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookID" class="control-label">Book</label>
                <select asp-for="BookID" class="form-control" asp-items="ViewBag.BookID"></select> <!--TO DO: remove control and add automaticaly-->
            </div>
            <div class="form-group">
                <label asp-for="BookStatus" class="control-label"></label>
                <select asp-for="BookStatus" class="form-control"></select>
                <span asp-validation-for="BookStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review" class="control-label"></label>
                @Html.TextAreaFor(model => model.Review, new { @class = "form-control", @rows = "10" })
                <span asp-validation-for="Review" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
</div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
