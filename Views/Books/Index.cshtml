@using Microsoft.AspNetCore.Identity
@model IEnumerable<Bookshelf.Models.Book>
@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "Books";
}

<h1>Book Database</h1>
<br />
<p>
    @if (SignInManager.IsSignedIn(User))
    {
        <a class="btn btn-outline-success" asp-action="Create">Add a new book <i class="fas fa-plus"></i></a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["LastNameSortParm"]">Author <i class="fas fa-sort"></i></a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParm"]">@Html.DisplayNameFor(model => model.Title) <i class="fas fa-sort"></i></a>
            </th>
            <th></th>
           </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{int count = 0;}
                    @foreach (var i in item.AuthorsBooks)
                    {
                        count++;
                        @if (item.AuthorsBooks.Count == count)
                        {
                            <span>@Html.DisplayFor(modelItem => i.Author.FullName)</span>
                        }
                        else
                        {
                            <span>@Html.DisplayFor(modelItem => i.Author.FullName), </span>
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.BookID">Details <i class="fas fa-angle-double-right"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
