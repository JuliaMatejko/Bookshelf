@model Bookshelf.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<br />
<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @{int count = 0;}
            @foreach (var i in Model.AuthorsBooks)
            {
                count++;
                @if (Model.AuthorsBooks.Count == count)
                {
                    <span>@Html.DisplayFor(modelItem => i.Author.FullName)</span>
                }
                else
                {
                    <span>@Html.DisplayFor(modelItem => i.Author.FullName), </span>
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AddedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddedOn)
        </dd>
    </dl>
    <p class="alert alert-danger">Are you sure you want to delete this book?</p>
    <form asp-action="Delete">
        <input type="hidden" asp-for="BookID" />
        <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-angle-left"></i> Back to List</a>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
