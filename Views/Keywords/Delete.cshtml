@model Bookshelf.Models.Keyword

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<br />
<div>
    <h4>Keyword: <span>@Html.DisplayFor(model => model.KeywordID)</span> </h4>
    <hr />
    <br />
    <p class="alert alert-danger">Are you sure you want to delete this keyword?</p>
    <form asp-action="Delete">
        <input type="hidden" asp-for="KeywordID" />
        <a class="btn btn-outline-secondary" asp-action="Index"><i class="fas fa-angle-left"></i> Back to Keyword list</a>
        <input type="submit" value="Delete" class="btn btn-danger" />

    </form>
</div>
